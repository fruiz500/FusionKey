{
  "name": "FusionKey",
  "short_name": "FusionKey",
  "description": "High-security passwords and encryption", 
  "omnibox": { "keyword" : "src" },
  "version": "0.1.4",
  "manifest_version": 2,
  "icons": {
  "16": "images/icon16.png",
  "48": "images/icon48.png",
  "128": "images/icon128.png"
  },
  "permissions": [
    "storage", "activeTab"
  ],
  "content_security_policy": "default-src 'self'; img-src 'self' data:; connect-src 'self' data:; style-src 'self'; frame-src 'self' https://*.passlok.com",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
        "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
        },
        "default_title": "FusionKey",
        "default_popup": "index.html"
  },
  "commands": {
  		"_execute_browser_action": {
            "suggested_key": {
              "windows": "Ctrl+Shift+K",
              "mac": "Command+Shift+K",
              "chromeos": "Ctrl+Shift+K",
              "linux": "Ctrl+Shift+K"
			}
  		}
  },
  "content_scripts": [{
      "matches": [
        "<all_urls>"
      ],
	  "all_frames": true,
	  "match_about_blank": true,
      "js": [
	  "content.js"]
    }],	
"applications": {
  	"gecko": {
    	"id": "fusionkey@passlok.com"
  	}
  }
}